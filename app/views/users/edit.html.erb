<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>拠点情報変更</h2>
      <h5>拠点情報を変更してください</h5>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "メインページに戻る", root_path, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :"拠点コード"%>
          </div>
          <div class='field-input'>
            <%= f.text_field :center_code, autofocus: true, placeholder: "半角数字4桁" %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :拠点名%>
          </div>
          <div class='field-input'>
            <%= f.text_field :center_name%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :メールアドレス%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :年間配達件数%>
          </div>
          <div class='field-input'>
            <%= f.text_field :yearly_delivery%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :拠点形態%>
          </div>
          <div class='field-input'>
            <%= f.collection_select(:consumption_type_id, ConsumptionType.all, :id, :name, {}, {class:"consumptiontype-select"})%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
